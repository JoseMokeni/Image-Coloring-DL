{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": true,
			"azureDnsAutoDetection": true,
			"installDockerBuildx": true,
			"installDockerComposeSwitch": true,
			"version": "latest",
			"dockerDashComposeVersion": "none"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"ppa": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/neofetch:1": {},
		"ghcr.io/devcontainers/features/anaconda:latest": {}
	},

	// "forwardPorts": [],

	"onCreateCommand": "conda init; source ~/.bashrc",

	"postCreateCommand": "conda create -y -n DL numpy pandas matplotlib tensorflow scikit-learn theano keras nlp pytorch seaborn nltk cryptography pillow; conda activate DL",


	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot-chat",
				"GitHub.codespaces",
				"GitHub.copilot",
				"GitHub.vscode-pull-request-github",
				"ms-toolsai.jupyter",
				"donjayamanne.python-extension-pack",
				"ms-azuretools.vscode-docker",
				"DavidAnson.vscode-markdownlint"

			]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
